<h1>Log In</h1>
<%= form_tag sessions_path do %>
	<p> 
		<%= label_tag :email %>
		<%= text_field_tag :email, params[:email], :class => "form-control" %>
	</p>
	<p> 
		<%= label_tag :password %>
		<%= password_field_tag :password, params[:password], :class => "form-control" %>
	</p>
	<%= submit_tag "Login", :class => "btn btn-success" %>
<% end %>